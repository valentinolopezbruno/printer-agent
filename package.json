{
  "name": "print-agent-tutto-bene",
  "version": "1.0.0",
  "description": "Agente local de impresi√≥n de tickets para Pastas Tutto Bene",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "build": "npm run build:win && npm run build:linux",
    "build:win": "pkg . --targets node18-win-x64 --output dist/print-agent.exe",
    "build:linux": "pkg . --targets node18-linux-x64 --output dist/print-agent"
  },
  "bin": "app.js",
  "pkg": {
    "targets": [
      "node18-linux-x64",
      "node18-win-x64"
    ],
    "outputPath": "dist",
    "assets": [
      "node_modules/**/*"
    ]
  },
  "dependencies": {
    "express": "^4.18.2",
    "escpos": "^3.0.0-alpha.6",
    "escpos-usb": "^3.0.0-alpha.4",
    "node-notifier": "^10.0.1",
    "winston": "^3.11.0",
    "normalize-text": "^2.4.1"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  }
} 